<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <!-- Existing block for customer account navigation sidebar -->
        <referenceBlock name="customer_account_navigation">
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="customer-account-navigation-quote-link">
                <arguments>
                    <argument name="path" xsi:type="string">quote/quote/history</argument>
                    <argument name="label" xsi:type="string" translate="true">My Quotes</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>